# contributed by Luca Marsella (CSCS)
easyblock = 'ConfigureMake'

name = 'GSL'
version = "2.5"

homepage = 'http://www.gnu.org/software/gsl/'

description = """The GNU Scientific Library (GSL) is a numerical library for C
and C++ programmers. The library provides a wide range of mathematical routines
such as random number generators, special functions and least-squares
fitting."""

toolchain = {'name': 'CrayIntel', 'version': '18.08'}
toolchainopts = {'opt': True, 'optarch': True, 'unroll': True, 'pic': True}

source_urls = ['http://mirror.switch.ch/ftp/mirror/gnu/gsl']
sources = [SOURCELOWER_TAR_GZ]

configopts = "--with-pic"

sanity_check_paths={
    'files': ['lib/libgsl.so', 'lib/libgsl.a'],
    'dirs': ['include'],
}

moduleclass = 'numlib'
