# @author: gppezzi, marcelsc

name = 'SWIG'
version = '3.0.10'

py_maj_ver = '3'
py_min_ver = '5'
py_rev_ver = '2'
versionsuffix = '-python%s' % (py_maj_ver)

homepage = 'http://www.swig.org/'
description = """SWIG is a software development tool that connects programs written in C and C++ with
 a variety of high-level programming languages."""

toolchain = {'name': 'CrayGNU', 'version': '17.08'}
toolchainopts = {'pic': True, 'opt': True, 'optarch': True}

source_urls = [SOURCEFORGE_SOURCE]
sources = [SOURCELOWER_TAR_GZ]

dependencies = [
    ('cray-python/17.06.1', EXTERNAL_MODULE),
    ('PCRE', '8.38'),
]

configopts = 'LDFLAGS="$LDFLAGS -Wl,--rpath=$EBROOTPCRE/lib"'
configopts += ' --with-python=$EBROOTCRAYPYTHON/bin/python%s --with-python-version=%s.%s' % (py_maj_ver, py_maj_ver, py_min_ver)
configopts += ' --with-python-root=$EBROOTCRAYPYTHON/lib/python%s.%s' % (py_maj_ver, py_min_ver)

moduleclass = 'devel'

