# @author: gppezzi, marcelsc, jgp

name = 'SWIG'
version = '4.0.1'
local_py_maj_ver = '3'
local_py_min_ver = '6'
local_py_rev_ver = '5.7'
versionsuffix = '-python%s' % (local_py_maj_ver)
homepage = 'http://www.swig.org/'
description = """SWIG is a software development tool that connects programs
written in C and C++ with a variety of high-level programming languages."""
toolchain = {'name': 'CrayGNU', 'version': '20.06'}
toolchainopts = {'pic': True, 'opt': True, 'optarch': True}
source_urls = [SOURCEFORGE_SOURCE]
sources = [SOURCELOWER_TAR_GZ]
dependencies = [
    ('cray-python/%s.%s.%s' %
     (local_py_maj_ver, local_py_min_ver, local_py_rev_ver), EXTERNAL_MODULE),
    ('PCRE', '8.44', '', True),
]
configopts = 'LDFLAGS="$LDFLAGS -Wl,--rpath=$EBROOTPCRE/lib"'
configopts += '--with-python=/opt/python/%s.%s.%s/bin/python ' % \
              (local_py_maj_ver, local_py_min_ver, local_py_rev_ver)
configopts += '--with-python-version=%s.%s ' % \
              (local_py_maj_ver, local_py_min_ver)
configopts += '--with-python-root=/opt/python/%s.%s.%s/lib/python%s.%s ' % \
              (local_py_maj_ver, local_py_min_ver, local_py_rev_ver,
               local_py_maj_ver, local_py_min_ver)

moduleclass = 'devel'
