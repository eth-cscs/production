easyblock = 'CMakeMake'

name = 'GROMACS'
version = "2023.2"
local_plumedversion = '2.9.0'
versionsuffix = '-PLUMED-%s' % local_plumedversion

homepage = 'http://www.gromacs.org'
description = """GROMACS is a versatile package to perform molecular dynamics,
 i.e. simulate the Newtonian equations of motion for systems with hundreds to millions of particles."""

toolchain = {'name': 'cpeGNU', 'version': '21.12'}
toolchainopts = {'opt': True, 'usempi': True, 'verbose': False, 'pic': True, 'dynamic': False, 'openmp': True}

source_urls = ['ftp://ftp.%(namelower)s.org/pub/%(namelower)s/']
sources = [SOURCELOWER_TAR_GZ]

# CMake dependency with SYSTEM toolchain
builddependencies = [
    ('CMake', '3.22.1', '', True)
]

dependencies = [
    ('craype-hugepages8M', EXTERNAL_MODULE),
    ('PLUMED', local_plumedversion)
]

preconfigopts = 'cd ../gromacs-%(version)s && plumed-patch -p --runtime --shared <<< 4 && cd - && '
configopts = [
    # single precision, no MPI
    "-DCMAKE_BUILD_TYPE=Release -DGMX_BUILD_OWN_FFTW=ON -DCMAKE_C_FLAGS='-fpermissive' -DCMAKE_CXX_FLAGS='-fpermissive' -DGMX_OPENMP=ON -DGMX_GPU=OFF -DGMX_PREFER_STATIC_LIBS=ON -DGMX_SIMD=AVX2_256 -DGMX_CYCLE_SUBCOUNTERS=ON -DGMX_MPI=OFF -DBUILD_SHARED_LIBS=ON",
    # single precision, MPI
    "-DCMAKE_BUILD_TYPE=Release -DGMX_BUILD_OWN_FFTW=ON -DCMAKE_C_FLAGS='-fpermissive' -DCMAKE_CXX_FLAGS='-fpermissive' -DGMX_OPENMP=ON -DGMX_GPU=OFF -DGMX_PREFER_STATIC_LIBS=ON -DGMX_SIMD=AVX2_256 -DGMX_CYCLE_SUBCOUNTERS=ON -DGMX_MPI=ON -DBUILD_SHARED_LIBS=ON",
    # double precision, no MPI
    "-DCMAKE_BUILD_TYPE=Release -DGMX_BUILD_OWN_FFTW=ON -DCMAKE_C_FLAGS='-fpermissive' -DCMAKE_CXX_FLAGS='-fpermissive' -DGMX_OPENMP=ON -DGMX_GPU=OFF -DGMX_PREFER_STATIC_LIBS=ON -DGMX_SIMD=AVX2_256 -DGMX_CYCLE_SUBCOUNTERS=ON -DGMX_MPI=OFF -DGMX_DOUBLE=ON -DGMX_DEFAULT_SUFFIX=OFF -DGMX_BINARY_SUFFIX=_d -DGMX_LIBS_SUFFIX=_d -DBUILD_SHARED_LIBS=ON",
    # double precision, MPI
    "-DCMAKE_BUILD_TYPE=Release -DGMX_BUILD_OWN_FFTW=ON i-DCMAKE_C_FLAGS='-fpermissive' -DCMAKE_CXX_FLAGS='-fpermissive' -DGMX_OPENMP=ON -DGMX_GPU=OFF -DGMX_PREFER_STATIC_LIBS=ON -DGMX_SIMD=AVX2_256 -DGMX_CYCLE_SUBCOUNTERS=ON -DGMX_MPI=ON -DGMX_DOUBLE=ON -DGMX_DEFAULT_SUFFIX=OFF -DGMX_BINARY_SUFFIX=_mpi_d -DGMX_LIBS_SUFFIX=_mpi_d -DBUILD_SHARED_LIBS=ON"
]

onlytcmod = True
skipsteps = ['test']

moduleclass = 'bio'
