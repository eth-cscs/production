//#                                find $WORKSPACE -name \$recipe | xargs dirname | xargs cp ${params.eb_prefix}/$machineLabel/${params.cdt_version}/software/\$new_path/easybuild/reprod/\$new_eb
//#                                echo \$new_eb >> $WORKSPACE/jenkins-builds/$prod_file
//#                        done
//#
